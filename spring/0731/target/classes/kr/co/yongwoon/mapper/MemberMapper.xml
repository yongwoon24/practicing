<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.yongwoon.mapper.MemberMapper">

	<resultMap type="kr.co.yongwoon.vo.MemberVO" id="memberMap">
		<id property="userId" column="userId"/>
		<result property="userpw" column="userpw"/>
		<result property="username" column="username"/>
		<result property="regdate" column="regdate"/>
		<result property="updatedate" column="updatedate"/>
		<collection property="authList" resultMap="authMap"></collection>
	</resultMap>
	<resultMap type="kr.co.yongwoon.vo.MemberAuthVO" id="authMap">
		<result property="userId" column="userId"/>
		<result property="auth" column="auth"/>
	</resultMap>
	<select id="read" parameterType="String" resultMap="memberMap">
		select  mem.userId, userpw, username, enabled, regdate, updatedate, auth
			from tbl_member mem LEFT OUTER JOIN tbl_member_auth auth
				ON mem.userId = auth.userId
			where mem.userId = #{userId}
			
	</select>
</mapper>